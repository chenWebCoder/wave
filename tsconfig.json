{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@wave/render": ["./packages/render/src/index.tsx"],
      "@wave/components": ["./packages/components/src/index.ts"],
      "@wave/dependencies": ["./packages/dependencies/src/index.ts"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "lib", "es", "dist", "example"]
}
